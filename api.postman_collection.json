{
  "info": {
    "name": "Car Rental API",
    "description": "API collection for the Car Rental System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"user@example.com\",\n    \"password\": \"password123\",\n    \"role\": \"user\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/user/profile",
              "host": ["{{base_url}}"],
              "path": ["user", "profile"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/user/profile",
              "host": ["{{base_url}}"],
              "path": ["user", "profile"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Updated Name\",\n    \"email\": \"updated@example.com\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Vehicle",
      "item": [
        {
          "name": "Get All Vehicles",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/vehicle",
              "host": ["{{base_url}}"],
              "path": ["vehicle"]
            }
          }
        },
        {
          "name": "Get Vehicle by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/vehicle/:id",
              "host": ["{{base_url}}"],
              "path": ["vehicle", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "vehicle_id_here"
                }
              ]
            }
          }
        },
        {
          "name": "Create Vehicle",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/vehicle",
              "host": ["{{base_url}}"],
              "path": ["vehicle"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"brand\": \"Toyota\",\n    \"model\": \"Camry\",\n    \"year\": 2023,\n    \"pricePerDay\": 50,\n    \"available\": true\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Booking",
      "item": [
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/booking",
              "host": ["{{base_url}}"],
              "path": ["booking"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"vehicleId\": \"vehicle_id_here\",\n    \"startDate\": \"2024-03-20\",\n    \"endDate\": \"2024-03-25\",\n    \"totalPrice\": 250\n}"
            }
          }
        },
        {
          "name": "Get User Bookings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/booking/user",
              "host": ["{{base_url}}"],
              "path": ["booking", "user"]
            }
          }
        }
      ]
    },
    {
      "name": "Location",
      "item": [
        {
          "name": "Get All Locations",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/location",
              "host": ["{{base_url}}"],
              "path": ["location"]
            }
          }
        },
        {
          "name": "Get Location by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/location/:id",
              "host": ["{{base_url}}"],
              "path": ["location", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "location_id_here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Extra Service",
      "item": [
        {
          "name": "Get All Extra Services",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/extra-service",
              "host": ["{{base_url}}"],
              "path": ["extra-service"]
            }
          }
        },
        {
          "name": "Get Extra Service by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/extra-service/:id",
              "host": ["{{base_url}}"],
              "path": ["extra-service", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "service_id_here"
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "your_jwt_token_here",
      "type": "string"
    }
  ]
}
